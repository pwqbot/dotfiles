	name = pwqbot
[core]
	editor = nvim
	pager = less -Xr
[credential]
	helper = cache
[color]
	ui = true
[alias]
	dog = log --graph --abbrev-commit --decorate \
		--format=format:'%C(bold blue)%h%C(reset) - %C(magenta)%an%C(reset), %C(bold cyan)%ad%C(reset) %C(auto)%d%C(reset)%n''          %C(white)%s%C(reset) '  \
		--date=format:'%Y-%m-%d %H:%M:%S'
	dogs = dog --stat
	dug = dog --simplify-by-decoration
    cm = commit -m
    st = status
    sb = status -bs
    ck = checkout
    wt = worktree
    wta = worktree add
    wtr = worktree remove
    bd = branch -D
    br = branch --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(contents:subject) %(color:green)(%(committerdate:relative)) [%(authorname)]' \
        --sort=-committerdate
    res = reset --hard
    up = commit -am '(git up)lazy update'
[diff]
    tool = vimdiff
[merge]
    tool = vimdiff
[mergetool "vimdiff"]
    path = nvim
[mergetool]
    keepBackup = false
